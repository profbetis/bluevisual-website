  &lt;label for=&#34;lightbox-toggle2&#34;&gt;&lt;img src=&#34;http://dev.bluevisual.tv/images/personal/hypercube-02.jpg&#34;&gt;&lt;/label&gt;
&lt;/div&gt;

&lt;div class=&#34;project-image&#34; oncontextmenu=&#34;return false;&#34;&gt;
  &lt;label for=&#34;lightbox-toggle4&#34;&gt;&lt;img src=&#34;http://dev.bluevisual.tv/images/personal/hypercube-04.jpg&#34;&gt;&lt;/label&gt;&lt;/div&gt;
&lt;input type=&#34;checkbox&#34; name=&#34;lightbox-toggle4&#34; id=&#34;lightbox-toggle4&#34; /&gt;
&lt;div class=&#34;lightbox&#34; oncontextmenu=&#34;return false;&#34;&gt;
